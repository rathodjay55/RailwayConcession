<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/railway_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aman"
                android:textSize="22dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/railway_card_passno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aman"
                android:textSize="22dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/railway_collName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aman"
                android:textSize="22dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/railway_card_sapId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aman"
                android:textSize="22dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/railway_card_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aman"
                android:textSize="22dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/railway_card_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aman"
                android:textSize="22dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/railway_card_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aman"
                android:textSize="22dp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/railway_card_stationFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aman"
                android:textSize="22dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/railway_card_stationTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aman"
                android:textSize="22dp"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/railway_card_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aman"
                android:textSize="22dp"
                android:textColor="#000"/>

            <Button
                android:id="@+id/railway_card_verify_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="22dp"
                android:text="Issue Pass"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>